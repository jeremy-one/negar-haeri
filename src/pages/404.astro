			/* Main Category Filters (Big Buttons) */
			.main-filter-container {
				display: flex;
				flex-wrap: wrap;
				gap: 1rem;
				margin-bottom: 1.5rem;
				justify-content: center;
			}

			.main-filter-btn {
				padding: 0.8rem 1.8rem;
				background-color: var(--color-white);
				border: 2px solid #e0e0e0;
				border-radius: 30px;
				color: var(--color-secondary);
				font-size: 1rem;
				font-weight: 600;
				cursor: pointer;
				transition: all 0.3s ease;
				text-transform: capitalize;
			}

			.main-filter-btn:hover {
				border-color: var(--color-accent);
				color: var(--color-accent);
				transform: translateY(-2px);
				box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
			}

			.main-filter-btn.active {
				background-color: var(--color-accent);
				border-color: var(--color-accent);
				color: var(--color-white);
			}

			/* Tag Filters (Smaller, more discrete) */
			.tag-filter-container {
				display: flex;
				flex-wrap: wrap;
				gap: 0.6rem;
				margin-bottom: 3rem;
				justify-content: center;
				align-items: center;
			}

			.tag-label {
				font-size: 0.85rem;
				color: var(--color-secondary);
				font-weight: 500;
				margin-right: 0.5rem;
			}

			.tag-btn {
				padding: 0.4rem 1rem;
				background-color: transparent;
				border: 1px solid #d0d0d0;
				border-radius: 20px;
				color: var(--color-secondary);
				font-size: 0.8rem;
				font-weight: 500;
				cursor: pointer;
				transition: all 0.3s ease;
			}

			.tag-btn:hover {
				border-color: var(--color-accent);
				color: var(--color-accent);
				background-color: rgba(139, 115, 85, 0.05);
			}

			.tag-btn.active {
				background-color: rgba(139, 115, 85, 0.15);
				border-color: var(--color-accent);
				color: var(--color-accent);
			}

			.press-group {
				margin-bottom: 2.5rem;
				transition: opacity 0.3s ease, transform 0.3s ease;
			}

			.press-group.hidden {
				display: none;
			}

			/* Mode "Tous" : fusion CSS avec une grille globale */
			.press-section.show-all {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 1.2rem;
			}

			/* Les éléments de navigation et filtres prennent toute la largeur */
			.press-section.show-all > h2,
			.press-section.show-all > .main-filter-container,
			.press-section.show-all > .search-container,
			.press-section.show-all > .tag-filter-container {
				grid-column: 1 / -1;
			}

			/* Les groupes et listes utilisent display: contents pour que les li remontent */
			.press-section.show-all .press-group {
				display: contents;
			}

			.press-section.show-all .press-group h3 {
				display: none;
			}

			.press-section.show-all .press-group .press-list,
			.press-section.show-all .press-group .interview-list {
				display: contents;
			}

			/* Les li s'affichent directement dans la grille parent et prennent toute la largeur */
			.press-section.show-all .press-list li,
			.press-section.show-all .interview-list li {
				flex: none !important;
				max-width: none !important;
				width: 100%;
