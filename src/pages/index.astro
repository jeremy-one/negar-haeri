		<script>
			// Three-tier filter functionality: Search + Main Categories + Tags
			// Filters individual items (li), not entire groups
			document.addEventListener('DOMContentLoaded', () => {
				const searchInput = document.getElementById('pressSearch');
				const mainFilterButtons = document.querySelectorAll('.main-filter-btn');
				const tagButtons = document.querySelectorAll('.tag-btn');
				const pressGroups = document.querySelectorAll('.press-group');

				let currentMainFilter = 'all';
				let currentTagFilter = 'all';
				let currentSearchTerm = '';

				// Function to filter from navigation dropdown
				window.filterPress = function(type) {
					currentMainFilter = type;
					currentTagFilter = 'all';
					currentSearchTerm = '';

					// Update UI
					mainFilterButtons.forEach(btn => {
						btn.classList.toggle('active', btn.dataset.type === type);
					});
					tagButtons.forEach(btn => {
						btn.classList.toggle('active', btn.dataset.tag === 'all');
					});
					if (searchInput) searchInput.value = '';

					applyFilters();
				};

				// Function to apply all filters
				function applyFilters() {
					pressGroups.forEach(group => {
						const groupType = group.dataset.type;
						const items = group.querySelectorAll('.press-list li, .interview-list li');
						let hasVisibleItems = false;

						items.forEach(item => {
							const itemTags = item.dataset.tags || '';
							const itemText = item.textContent.toLowerCase();

							// Check main category filter (based on parent group)
							const matchesMainFilter = currentMainFilter === 'all' || groupType === currentMainFilter;

							// Check tag filter (based on individual item tags)
							const matchesTagFilter = currentTagFilter === 'all' || itemTags.split(' ').includes(currentTagFilter);

							// Check search term
							const matchesSearch = currentSearchTerm === '' || itemText.includes(currentSearchTerm.toLowerCase());

							// Show item only if it matches all filters
							if (matchesMainFilter && matchesTagFilter && matchesSearch) {
								item.classList.remove('hidden');
								hasVisibleItems = true;
							} else {
								item.classList.add('hidden');
							}
						});

						// Hide entire group if no items are visible
						if (hasVisibleItems) {
							group.classList.remove('hidden');
						} else {
							group.classList.add('hidden');
						}
					});
				}

				// Main category filter buttons
				mainFilterButtons.forEach(button => {
					button.addEventListener('click', () => {
						currentMainFilter = button.dataset.type;

						// Update active button
						mainFilterButtons.forEach(btn => btn.classList.remove('active'));
						button.classList.add('active');

						applyFilters();
					});
				});

				// Tag filter buttons
				tagButtons.forEach(button => {
					button.addEventListener('click', () => {
						currentTagFilter = button.dataset.tag;

						// Update active button
						tagButtons.forEach(btn => btn.classList.remove('active'));
						button.classList.add('active');

						applyFilters();
					});
				});

				// Search input
				searchInput.addEventListener('input', (e) => {
					currentSearchTerm = e.target.value;
					applyFilters();
				});

			});
		</script>
