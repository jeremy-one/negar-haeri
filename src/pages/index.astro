									list.removeChild(list.firstChild);
								}
							}
						});
					});

					// Vider la première liste aussi
					while (firstList.firstChild) {
						firstList.removeChild(firstList.firstChild);
					}

					// Ajouter tous les items triés dans la première liste
					allItems.forEach(item => {
						firstList.appendChild(item.element);
					});
				}

				// Fonction pour restaurer l'ordre original
				function restoreOriginalOrder() {
					// Grouper les items par parent
					const parentMap = new Map();

					originalOrder.forEach((position, item) => {
						if (!parentMap.has(position.parent)) {
							parentMap.set(position.parent, []);
						}
						parentMap.get(position.parent).push({ item, index: position.index });
					});

					// Pour chaque parent, restaurer ses enfants dans l'ordre
					parentMap.forEach((items, parent) => {
						// Trier par index
						items.sort((a, b) => a.index - b.index);

						// Vider le parent
						while (parent.firstChild) {
							parent.removeChild(parent.firstChild);
						}

						// Ré-ajouter les items dans l'ordre
						items.forEach(({ item }) => {
							parent.appendChild(item);
						});
					});
				}

				// Helper function to count visible items with given filters
				function countVisibleItems(mainFilter, tagFilter, searchTerm) {
					let count = 0;
					pressGroups.forEach(group => {
						const groupType = group.dataset.type;
						const items = group.querySelectorAll('.press-list li, .interview-list li');

						items.forEach(item => {
							const itemTags = item.dataset.tags || '';
							const itemText = item.textContent.toLowerCase();

							const matchesMainFilter = mainFilter === 'all' || groupType === mainFilter;
							const matchesTagFilter = tagFilter === 'all' || itemTags.split(' ').includes(tagFilter);
							const matchesSearch = searchTerm === '' || itemText.includes(searchTerm.toLowerCase());

							if (matchesMainFilter && matchesTagFilter && matchesSearch) {
								count++;
							}
						});
					});
					return count;
				}

				// Main category filter buttons
				mainFilterButtons.forEach(button => {
					button.addEventListener('click', () => {
